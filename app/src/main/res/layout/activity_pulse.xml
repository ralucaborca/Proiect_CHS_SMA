<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    tools:context=".Pulse_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_leg"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:src="@drawable/picior">
        </ImageView>


        <ImageView
            android:id="@+id/image_neck"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:src="@drawable/gat">
        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="80dp"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginBottom="150dp">

        <EditText
            android:id="@+id/text_picior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="220dp"
            android:minHeight="48dp"
            android:text="Puls picior" />

        <EditText
            android:id="@+id/text_gat"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:minHeight="48dp"
            android:text="Puls gat" />
    </LinearLayout>
 <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_gravity="center_vertical"
     android:orientation="horizontal"
     android:layout_marginTop="100dp"
     >
     <ImageView
         android:id="@+id/image_left_hand"
         android:layout_width="200dp"
         android:layout_height="250dp"
         android:src="@drawable/mana_stanga"
         >
     </ImageView>
     <ImageView
         android:id="@+id/image_right_hand"
         android:layout_width="200dp"
         android:layout_height="250dp"
         android:src="@drawable/mana_dreapta"
         >
     </ImageView>
 </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="420dp"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginBottom="150dp">

        <EditText
            android:id="@+id/text_mana_stanga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="220dp"
            android:minHeight="48dp"
            android:text="Puls mana stanga" />

        <EditText
            android:id="@+id/text_mana_dreapta"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:minHeight="48dp"
            android:text="Puls mana dreapta" />
    </LinearLayout>

    <Button
        android:id="@+id/button_trimitere_puls"
        android:layout_marginTop="680dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Trimite pulsul">
    </Button>
</androidx.cardview.widget.CardView>