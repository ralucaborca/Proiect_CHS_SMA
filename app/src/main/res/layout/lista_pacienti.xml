<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ListaPacienti_activity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/text_nume_prenume1"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Nume si Prenume:"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/text_varsta1"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Varsta:"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/text_greutate1"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Greutate:"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/text_inaltime1"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Inaltime:"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/text_probleme1"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Probleme de sanatate:"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/text_puls1"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Puls:"
        />

        </LinearLayout>