<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".FeedbackPacient_activity">

    <EditText
        android:id="@+id/feedback_nume_prenume_medic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Nume medic:"
        android:textSize="20dp"
        android:textStyle="bold" />

        <EditText
            android:id="@+id/feedback_nume_prenume_pacient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Nume si Prenume pacient:"
            android:textSize="20dp"
            android:textStyle="bold" />

    <EditText
        android:id="@+id/sugestii"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Sugestii:"
        android:textSize="20dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/button_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:text="Trimiteti sugestiile"
        />

</LinearLayout>